package learn.java.core;

import java.util.Scanner;

public class Bai8 {
	public static void main(String[] args) {
		int a;
		int[3] b;
		Scanner sc = new Scanner(System.in);
		System.out.print("Nhap tu ban phim so nguyen co 3 chu so: ");
		a = sc.nextInt();
		int tmp=a;
		for (int i = 0; i < 3; i++) {
			b[i]=tmp%10;
			int k=tmp/10;
			tmp=k;
		}
		for(int i=0;i<3;i++) {
			System.out.print(b[i]);
		}
	}
}
